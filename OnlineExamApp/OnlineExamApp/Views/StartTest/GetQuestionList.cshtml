@model IEnumerable<OnlineExamApp.Models.Questions>

@{
    ViewData["Title"] = "GetQuestionList";
}

@*<h1>GetQuestionList</h1>*@

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QuestionName)
            </th>
            <th>
                Options
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.QuestionName)
                </td>
                <td>
                    <div>
                        <label>
                            <input type="radio" name="SelectedOption_@item.Id" value="@item.Option1" />
                            @item.Option1
                        </label>
                    </div>
                    <div>
                        <label>
                            <input type="radio" name="SelectedOption_@item.Id" value="@item.Option2" />
                            @item.Option2
                        </label>
                    </div>
                    <div>
                        <label>
                            <input type="radio" name="SelectedOption_@item.Id" value="@item.Option3" />
                            @item.Option3
                        </label>
                    </div>
                    <div>
                        <label>
                            <input type="radio" name="SelectedOption_@item.Id" value="@item.Option4" />
                            @item.Option4
                        </label>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-controller="Home" asp-action="Result">Submit</a>
</div>


